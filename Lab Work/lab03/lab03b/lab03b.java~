 Program Description:A program that calculates the amount of flowers that can be planted on a triangular area
 Program Name:lab03b
 */
import java.util.Scanner;
public class lab03b {
  public static void main( String[] args ){
    Scanner input = new Scanner(System.in) ;
    
    //Constant
    final int FLOWERS_PER_SQUARE = 17 ;
    
    //Variables
    double a ;
    double b ;
    double c ;
    double s ;
    double x ;
    double area ;
    int totalFlowers ;
    
    
    //Triangle's side lengths that will be given by the user
    System.out.print("Please enter the three sides of your triangle in meters") ;
    a = input.nextDouble() ;
    b = input.nextDouble() ;
    c = input.nextDouble() ;
    
    //If the values support the triangle rule the program will continue working
    if (Math.abs(a-b)<c && c<a+b){
      
      //The variables for some needed info that will be generated by the users values
      s = (a+b+c)/2;
      x = s*(s-a)*(s-b)*(s-c) ;  
      area = Math.sqrt(x) ;
      totalFlowers = (int) area * FLOWERS_PER_SQUARE ;
      
      
      //Info about the flower amount that can be planted will be printed here using the user given values
      System.out.print("Your triangles area is ") ;
      System.out.println (area) ;
      System.out.print("The max amount of flowers that you can plant on your triangle is ") ;
      System.out.println (totalFlowers) ;
    }
    
    //If one or more values given are negative or 0 it will give an error
    else if (a<=0 || b<=0 || c<=0) {
      
      System.out.println ("The values are invalid because sides a, b or c cannot be a negative or 0 ") ;
      
    }
    
    //If the triangle does not support the triangle rule it will give an error
    else {
      
      System.out.println ("The values are invalid because it does not support the triangle rule") ;
      
    }
    
    
    input.close() ;
  }
}